      <view class="weui-panel__bd">
        <block wx:for="{{scheduleItems}}" wx:key="{{item.id}}">
          <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" bind:longpress="" data-id="{{item.id}}" bindtap="detail">
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">
                <view>
                  <image src="/icons/item.png" class="schedule-icon" />{{item.title}}
