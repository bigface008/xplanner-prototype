page {
  height: 100%;
}

.weui-navbar {
  height: 28px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.weui-navbar .default-item {
  width: 20%;
  text-align: center;
  font-size: 33rpx;
  color: #8a8a8a;
  font-family: Courier New, Courier, monospace;
  font-weight: bolder;
}

.weui-navbar .item_on {
  font-weight: bold;
  color: #000;
  border-bottom: 2px solid #000;
}

.weui-navbar-slider {
  position: absolute;
  width: 160rpx;
  content: "";
  background: #3e3;
  left: 12.5rpx;
  transition: transform 0.3s;
}

.swiper-box {
  display: flex;
  flex-direction: column;
}

.list-item {
  height: 77px;
  display: flex;
  flex-direction: column;
  border-bottom: 2.5px solid #e6e6e6;
}

.item-title {
  padding-left: 4%;
  padding-top: 3%;
  font-size: 20px;
  font-weight: bold;
}

.item-time {
  padding-left: 4%;
  font-family: Courier New, Courier, monospace;
  color: #8a8a8a;
  font-size: 14px;
  padding-bottom: 5%;
}

.picture {
  height: 250px;
  width: 100%;
}

.input {
  height: 50px;
}

.xplanner {
  flex-direction: column;
  display: flex;
  background-color: black;
  height: 200px;
  justify-content: center;
  align-items: center;
}

.line1 {
  font-size: 40px;
  color: white;
  font-weight: lighter;
}

.line2 {
  font-size: 13px;
  color: white;
  width: 70%;
  text-align: center;
  font-family: Courier New, Courier, monospace;
}

.add-schedule {
  float: right;
  /* background-color: #fff; */
  position: fixed;
  bottom: 20px;
  right: 20px;
   border: 0 solid #fff; 
   border-radius: 500px; 
  height: 40px;
  width: 40px;
}
